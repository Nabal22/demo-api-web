{
  "name": "demo-api-web",
  "version": "1.0.0",
  "private": true,
  "description": "Démo comparative REST vs GraphQL vs SOAP — catalogue de livres SF",
  "workspaces": [
    "shared",
    "rest-server",
    "graphql-server",
    "soap-server",
    "benchmark"
  ],
  "scripts": {
    "setup": "npm install && npm run seed",
    "seed": "tsx shared/db.ts",
    "start:rest": "tsx rest-server/src/index.ts",
    "start:graphql": "tsx graphql-server/src/index.ts",
    "start:soap": "tsx soap-server/src/index.ts",
    "kill": "lsof -ti:3001,3002,3003,3012 | xargs kill -9 2>/dev/null; echo 'Ports libérés'",
    "start:all": "npm run kill && concurrently \"npm:start:rest\" \"npm:start:graphql\" \"npm:start:soap\"",
    "benchmark": "tsx benchmark/src/run.ts",
    "demo": "npm run kill && npm run start:all & sleep 3 && npm run benchmark && open visualize/index.html"
  },
  "devDependencies": {
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "concurrently": "^8.2.0",
    "@types/node": "^20.10.0"
  }
}
